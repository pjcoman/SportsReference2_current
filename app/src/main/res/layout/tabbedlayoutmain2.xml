    </android.support.v4.widget.DrawerLayout>-->

    <Spinner
        android:id="@+id/spinnerHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:dropDownWidth="wrap_content"
        android:popupBackground="@drawable/layout_rounded_corners_blacktogray_lr"
        android:prompt="@string/sh"
        android:spinnerMode="dropdown"
        android:theme="?android:attr/dropDownSpinnerStyle"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleViewPager" />

</android.support.constraint.ConstraintLayout>